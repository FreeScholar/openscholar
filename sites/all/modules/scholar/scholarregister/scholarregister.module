/**
 * Implementation of hook_user.
 */
function scholarregister_user($op, &$edit, &$account, $category = NULL){
  switch ($op) {
    case 'login' :
      // if is a site owner ...
      if ($vsite = scholarregister_siteowner_path($account)) {
        // if is logging in for the first time or need to reset password
        if (($account->login == 0) || (arg(0) == 'user' && arg(1) == 'reset')) {
          purl_goto("cp/users", array(
            'purl' => array(
              'provider' => 'spaces_og', 
              'id' => $vsite->sid 
            ) 
          ));
        }
        else {
          // redirect them to their home page
          $vsite->redirect('home');
        }
      
      }
      break;
  }
}

function scholarregister_siteowner_path($account){
  
  // if is a site owner redirec to her site home page
  //dpm($account -> og_groups);
  if (isset($account->og_groups) && is_array($account->og_groups)) {
    foreach ( $account->og_groups as $group ) {
      //dpm($group);
      if ($group['uid'] == $account->uid) {
        $vsite = spaces_load("og", $sid = $group['nid'], $is_active = FALSE);
        return $vsite;
      }
    }
  }
  return false;
}

