 */
function scholar_project_block($op = 'list', $delta = 0, $edit = array()) {
  if ($op == 'list') {
    $blocks[0]['info'] = t('Project site logo');
    $blocks[1]['info'] = t('Project site info');
    return $blocks;
  }
  elseif ($op == 'view') {
    switch ($delta) {
      case 0:
        return _scholar_project_logo_wdgt();
      case 1:
       return _scholar_project_basicinfo_wdgt();
    }
  }
}

