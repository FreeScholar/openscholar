/**
 * Implementation of hook init
 */
function openscholar_front_init(){
  $vsite = vsite_get_vsite();
  if (!$vsite && !drupal_is_front_page()
      && arg(0) != 'admin'){
    //If we are not in admin set the context
    context_set('openscholar', 'section', 'sitewide');
  }
}

